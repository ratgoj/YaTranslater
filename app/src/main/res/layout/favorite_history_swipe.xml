<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/history_favorite_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:tabIndicatorColor="@color/colorElementControl"
            app:tabIndicatorHeight="4dp"
            app:tabMode="fixed"
            >

            <android.support.design.widget.TabItem
                android:id="@+id/history_tab_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_history"/>

            <android.support.design.widget.TabItem
                android:id="@+id/favorites_tab_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_favorites"/>

        </android.support.design.widget.TabLayout>
</LinearLayout>