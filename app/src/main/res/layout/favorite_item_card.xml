<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_favorite_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/favorite_translate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_view_margin"
            android:text="@string/cv_translate_text"
            android:textSize="@dimen/translate_text_size"/>

        <TextView
            android:id="@+id/favorite_source_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorite_translate_text"
            android:layout_margin="@dimen/text_view_margin"
            android:text="@string/cv_source_text"
            android:textSize="@dimen/source_text_size"/>

        <ImageView
            android:id="@+id/favorite_img"
            android:layout_width="@dimen/toggle_button_size"
            android:layout_height="@dimen/toggle_button_size"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/toggle_end_margin"
            android:layout_toLeftOf="@+id/favorite_delete_item"
            android:layout_toStartOf="@+id/favorite_delete_item"
            android:src="@drawable/ic_bookmark_yellow24dp"/>

        <ImageButton
            android:id="@+id/favorite_delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete_24dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>