<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.fern.yatranslater.fragments.TranslateFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/wrapper_translate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_translate_hint"
        app:hintTextAppearance="@style/AppTheme">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/text_input_margin"
            android:inputType="textMultiLine"
            android:lines="5"
            android:textAlignment="textStart"
            android:textCursorDrawable="@drawable/cursor_shape"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/translate_result"
        android:layout_below="@+id/wrapper_translate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
